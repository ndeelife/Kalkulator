from tkinter import *
import math
import numpy as np
from math import factorial
from math import *

expression = ""

def press(angka):
    global expression

    expression = expression + str(angka)

    equation.set(expression)

# Function to evaluate the final expression
def equalpress():
    try:
        global expression
        total = str(eval(expression))
        equation.set(total)
        expression = ""
    except:
        equation.set(" error ")
        expression = ""

def clear():
    global expression
    expression = ""

    equation.set("")

def fsin(arg):
    return sin(arg * convert_constant)

if __name__ == "__main__":
